Edit Figure:

<%= @figure.name %>


<form action="/figures/<%=@figure.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  New Figure Name:
  <br>
  <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">
  Select Exitsing Title:
  <br>
  <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"><%= title.name %></input><br>
  <% end %>
  New Title: <input type="text" name="title[name]" id="new_title">
  <br>
  Select Existing Landmark:
  <br>
  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>"><%= landmark.name %></input><br>
  <% end %>

  New Landmark: <input type="text" name="landmark[name]" id="new_landmark">
  <br>
  <input type="submit" value="Edit Figure">
</form>
